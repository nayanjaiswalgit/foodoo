{
  "name": "food-delivery",
  "private": true,
  "scripts": {
    "dev:api": "turbo run dev --filter=@food-delivery/api",
    "dev:mobile": "turbo run dev --filter=@food-delivery/mobile",
    "dev:delivery": "turbo run dev --filter=@food-delivery/delivery",
    "dev:admin": "turbo run dev --filter=@food-delivery/web-admin",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.3.0",
    "typescript": "^5.6.0"
  },
  "lint-staged": {
    "apps/api/src/**/*.ts": [
      "bash -c 'npx tsc --noEmit -p apps/api/tsconfig.json'"
    ],
    "packages/shared/src/**/*.ts": [
      "bash -c 'npx tsc --noEmit -p packages/shared/tsconfig.json'"
    ],
    "apps/web-admin/src/**/*.{ts,tsx}": [
      "bash -c 'npx tsc --noEmit -p apps/web-admin/tsconfig.app.json'",
      "bash -c 'cd apps/web-admin && npx eslint --max-warnings 0'"
    ],
    "apps/mobile/**/*.{ts,tsx}": [
      "bash -c 'npx tsc --noEmit -p apps/mobile/tsconfig.json'"
    ],
    "apps/delivery/**/*.{ts,tsx}": [
      "bash -c 'npx tsc --noEmit -p apps/delivery/tsconfig.json'"
    ]
  },
  "packageManager": "pnpm@9.15.0"
}
