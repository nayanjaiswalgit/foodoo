# EditorConfig â€” https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
# Trailing whitespace is meaningful in Markdown (line breaks)
trim_trailing_whitespace = false
max_line_length = off

[*.{json,yaml,yml}]
indent_size = 2

[*.toml]
indent_size = 2

[Makefile]
indent_style = tab

[*.go]
indent_style = tab
