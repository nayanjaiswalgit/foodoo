{
  "expo": {
    "name": "FoodDelivery Partner",
    "slug": "food-delivery-partner",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "fdpartner",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D3436"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.fooddelivery.partner",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby delivery orders.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need your location to track delivery progress.",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "package": "com.fooddelivery.partner",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2D3436"
      },
      "permissions": ["ACCESS_FINE_LOCATION", "ACCESS_BACKGROUND_LOCATION"]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        { "locationAlwaysAndWhenInUsePermission": "Allow FoodDelivery Partner to use your location for deliveries." }
      ]
    ]
  }
}
